# WebHarvest Environment Configuration
# Copy this file to .env:  cp .env.example .env
# Then change SECRET_KEY and ENCRYPTION_KEY to your own random strings.

# Backend
SECRET_KEY=CHANGE-ME-generate-a-random-string-at-least-32-chars
ENCRYPTION_KEY=CHANGE-ME-exactly-32-characters!!
DATABASE_URL=postgresql+asyncpg://webharvest:webharvest@db:5432/webharvest
REDIS_URL=redis://redis:6379/0
BACKEND_CORS_ORIGINS=["http://localhost:3000"]

# PostgreSQL
POSTGRES_DB=webharvest
POSTGRES_USER=webharvest
POSTGRES_PASSWORD=webharvest

# Celery
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000

# Browser Pool
BROWSER_POOL_SIZE=5
BROWSER_HEADLESS=true

# Rate Limiting (requests per minute)
RATE_LIMIT_SCRAPE=100
RATE_LIMIT_CRAWL=20
RATE_LIMIT_MAP=50
